{
    "compilerOptions": {
        "target": "ES2020",                                
        "module": "NodeNext",                        
        "baseUrl": "./",                                 
        "paths": {
            "@/*": ["src/*"],
            "@routes/*": ["src/routes/*"],
        },                                      
        "esModuleInterop": true,                            
        "forceConsistentCasingInFileNames": true,           
        "strict": true,                                
        "skipLibCheck": true
    }
}
